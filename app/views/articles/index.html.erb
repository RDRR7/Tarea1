<h1>Listing articles</h1>

<div class="container">          
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Title</th>
				<th>Content</th>
				<th>Username</th>
			</tr>
		</thead>
		<tbody>
			<% @articles.each do |article| %>
				<tr>
					<td><%= article.title %></td>
					<td><%= article.content %></td>
					<td><%= User.find(article.user_id).username %></td>
					<td><%= link_to 'Show', article %></td>
					<td><%= link_to 'Edit', edit_article_path(article) %></td>
					<td><%= link_to 'Remove', article, method: :delete, data: { confirm: "Are you sure?" } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>